generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  VOID
}

enum BillStatus {
  DRAFT
  RECEIVED
  PAID
  VOID
}

enum InventoryMoveType {
  IN
  OUT
  ADJUST
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  INCOME
  EXPENSE
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  role         String   @default("USER")
  orgId        String   @default("default-org") // Simplification: each user belongs to an org
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Customer {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  invoices    SalesInvoice[]
  contacts    Contact[]
  opportunities Opportunity[]
  activities  Activity[]
  tasks       Task[]
}

model Vendor {
  id        String   @id @default(cuid())
  orgId     String
  name      String
  email     String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bills     PurchaseBill[]
}

model Product {
  id          String   @id @default(cuid())
  orgId       String
  sku         String
  name        String
  unit        String   @default("pcs")
  priceCents  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  invoiceLines SalesInvoiceLine[]
  billLines    PurchaseBillLine[]
  moves        InventoryMove[]

  @@unique([orgId, sku])
}

model SalesInvoice {
  id          String        @id @default(cuid())
  orgId       String
  number      String
  status      InvoiceStatus @default(DRAFT)
  customerId  String
  customer    Customer      @relation(fields: [customerId], references: [id], onDelete: Restrict)
  invoiceDate DateTime      @default(now())
  dueDate     DateTime?
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  lines       SalesInvoiceLine[]

  @@unique([orgId, number])
}

model SalesInvoiceLine {
  id          String       @id @default(cuid())
  invoiceId   String
  invoice     SalesInvoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  productId   String?
  product     Product?     @relation(fields: [productId], references: [id], onDelete: SetNull)
  description String
  qty         Int
  unitPriceCents Int
}

model PurchaseBill {
  id        String      @id @default(cuid())
  orgId     String
  number    String
  status    BillStatus  @default(DRAFT)
  vendorId  String
  vendor    Vendor      @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  billDate  DateTime    @default(now())
  dueDate   DateTime?
  notes     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  lines     PurchaseBillLine[]

  @@unique([orgId, number])
}

model PurchaseBillLine {
  id          String       @id @default(cuid())
  billId      String
  bill        PurchaseBill @relation(fields: [billId], references: [id], onDelete: Cascade)
  productId   String?
  product     Product?     @relation(fields: [productId], references: [id], onDelete: SetNull)
  description String
  qty         Int
  unitPriceCents Int
}

model InventoryMove {
  id        String            @id @default(cuid())
  orgId     String
  productId String
  product   Product           @relation(fields: [productId], references: [id], onDelete: Restrict)
  type      InventoryMoveType
  qty       Int
  note      String?
  createdAt DateTime          @default(now())
}

model Account {
  id        String      @id @default(cuid())
  orgId     String
  code      String
  name      String
  type      AccountType
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  lines     JournalLine[]

  @@unique([orgId, code])
}

model JournalEntry {
  id        String      @id @default(cuid())
  orgId     String
  date      DateTime    @default(now())
  memo      String?
  createdAt DateTime    @default(now())

  lines     JournalLine[]
}

model JournalLine {
  id         String       @id @default(cuid())
  entryId    String
  entry      JournalEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  accountId  String
  account    Account      @relation(fields: [accountId], references: [id], onDelete: Restrict)
  debitCents Int          @default(0)
  creditCents Int         @default(0)
}

// CRM Models

model Contact {
  id        String   @id @default(cuid())
  orgId     String
  customerId String
  customer  Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  firstName String
  lastName  String?
  email     String?
  phone     String?
  jobTitle  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OpportunityStage {
  NEW
  QUALIFICATION
  PROPOSAL
  NEGOTIATION
  WON
  LOST
}

model Opportunity {
  id          String           @id @default(cuid())
  orgId       String
  title       String
  valueCents  Int              @default(0)
  stage       OpportunityStage @default(NEW)
  customerId  String
  customer    Customer         @relation(fields: [customerId], references: [id], onDelete: Cascade)
  closeDate   DateTime?
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  activities Activity[]
}

enum ActivityType {
  CALL
  EMAIL
  MEETING
  NOTE
}

model Activity {
  id            String       @id @default(cuid())
  orgId         String
  type          ActivityType
  subject       String
  description   String?
  date          DateTime     @default(now())
  customerId    String
  customer      Customer     @relation(fields: [customerId], references: [id], onDelete: Cascade)
  opportunityId String?
  opportunity   Opportunity? @relation(fields: [opportunityId], references: [id], onDelete: SetNull)
  createdAt     DateTime     @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          String       @id @default(cuid())
  orgId       String
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  customerId  String?
  customer    Customer?    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
